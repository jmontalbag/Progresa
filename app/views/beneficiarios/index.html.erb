<% content_for :content_header  do %>
    <section class="content-header">
      <h1>beneficiarios</h1>
      <span class="btn btn-success btn-lg bt pull-right glyphicon glyphicon-plus"><%= link_to 'Crear beneficiario',nuevo_beneficiario_path %></span>

    </section>
<% end %>

<section class="content invoice">
  <table class="table">
    <thead>
    <tr>
      <th>Nombrse</th>
      <th>Apellido</th>
      <th>RUT</th>
      <th>Fecha nacimiento</th>
      <th>Edad</th>
      <th>Mostrar</th>
      <th>Editar</th>
      <th>Eliminar</th>
    </tr>
    </thead>
    <tbody>
    <% @beneficiarios.each do |beneficiario|%>
        <tr>
          <td><%= beneficiario.nombre.to_s%> </td>
          <td><%= beneficiario.apellido.to_s%> </td>
          <td><%= beneficiario.rut.to_s%> </td>
          <td><%= beneficiario.fecha_nacimiento.to_s%> </td>
		  <td><%= beneficiario.edad.to_s%> </td>
          <td><span class="glyphicon glyphicon-play" aria-hidden="true" ></span><%= link_to 'Mostrar', beneficiario_path(beneficiario) %> </td>
          <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%= link_to 'Editar',editar_beneficiario_path(beneficiario) %></td>
          <td><span class="glyphicon glyphicon-trash" aria-hidden="true"></span><%= link_to'Eliminar',{ action: :eliminar, id: beneficiario.id} , method: :delete, data: {confirm: 'Esta seguro?'} %> </td>
        </tr>
    <%end%>
    </tbody>
  </table>
  <%= will_paginate @beneficiarios, renderer: BootstrapPagination::Rails %>
</section>